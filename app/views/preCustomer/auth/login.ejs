<h1 class="pagetitle"><%- __('h1.AdvanceTicketSalesWebsite') %></h1>
<p class="guidetext"><%- __('Label.AdvanceTicketSalesWebsiteGuideText') %></p>

<p class="termtext">
<%- include('../../common/reserve/_termtext') %>
</p>

<div class="loginform loginform-member">
    <p class="guidetext"><%- __('Label.AdvanceTicketSalesWebsiteGuideText2') %></p>
    <% if (validation) { %>
    <% validation.forEach(function (error) { %>
    <p class="errmsg"><%- error.msg %></p>
    <% }) %>
    <% } %>

    <form method="post">
        <div class="form-group form-inline">
            <labeL>ID</labeL>
            <input type="text" name="userId" id="id_userId" class="form-control" value="<%- userId %>">
        </div>
        <div class="form-group form-inline">
            <label><%- __('Form.FieldName.password') %></label>
            <input type="password" name="password" id="id_password" class="form-control" value="<%- password %>">
        </div>
        <div class="form-group form-inline">
            <label><%- __('Form.FieldName.language') %></label>
            <select class="form-control" name="language">
                <option value="ja"<% if (locale === 'ja') { %> selected="selected"<% } %>>日本語</option>
                <option value="en"<% if (locale === 'en') { %> selected="selected"<% } %>>English</option>
            </select>
        </div>
        <label for="id_remember"><input id="id_remember" name="remember" type="checkbox"><%- __('Form.FieldName.remember') %></label>
        <a class="btn btn-big btn-login" href="javascript:void(0);"><span><%- __('Button.AcceptTermsAndLogin') %></span></a>
    </form>
</div>

<script>
$(function(){
    $('.btn-login').on('click', function(){
        $('form').submit();
    });
});
</script>
